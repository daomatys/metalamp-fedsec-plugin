{
  "compileOnSave": true,
  "compilerOptions": {
    //"strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    //end of basic strict rules list
  },
  "rootDirs": [
    "./src",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}