{
  "compileOnSave": true,
  "compilerOptions": {
    /* base settings list */
    "rootDirs": [
      "./src",
    ],  
    /* strictness rules */
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    /* manually forbidden rules */
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": false,
    /* decorative rules */
    "pretty": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}
